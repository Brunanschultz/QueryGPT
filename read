# Cria ambiente 
python3 -m venv env-sqlcoder

# Ative o ambiente
source env-sqlcoder/bin/activate

# Artualiza
pip install --upgrade pip

# Instalando llama-cpp-python (CPU only, sem Metal)..."
#CMAKE_ARGS="-DLLAMA_METAL=OFF" pip install llama-cpp-python --force-reinstall --no-binary llama-cpp-python

# Desativar o ambiente
conda deactivate

# Instale o restante via pip com requirements.txt
pip install -r requirements.txt

# Iniciar a aplicação
uvicorn api:app --host 0.0.0.0 --port 8001 






